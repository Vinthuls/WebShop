@page
@model LoginModel


<div class="vertical-center bg-light">
    <div class="container w-25">
        <h1 class="h3 mb-3 fw-normal text-center">Log In</h1>
        <div class="m-1 text-danger" asp-validation-summary="All"></div>
        <form method="post" class="text-center">
            <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
            <div class="input-group input-group-lg">
                <input asp-for="UserName" placeholder="User name" class="form-control w-75" />
                <input asp-for="Password" type="password"
                       placeholder="Password" class="form-control w-75" />
            </div>
            <br/>
            <button class="w-100 btn btn-lg btn-outline-primary" type="submit">Log In</button>
        </form>
    </div>
</div>