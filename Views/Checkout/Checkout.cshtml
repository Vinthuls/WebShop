@model CheckoutViewModel

<div class="container">
    <main>
        @if (Model is not null)
        {
            <div class="row g-5">
                <div class="col-md-5 col-lg-4 order-md-last">

                    <h4 class="d-flex justify-content-between align-items-center mb-3">
                        <span class="text-secondary">Your cart</span>
                        <span class="badge bg-secondary rounded-pill text-white">
                            @Model.ShoppingCart.CartItems.Sum(ci => ci.Quantity)
                        </span>
                    </h4>
                    <ul class="list-group mb-3">

                        @foreach (var cartItem in Model.ShoppingCart.CartItems)
                        {
                            <li class="list-group-item d-flex justify-content-between lh-sm">
                                <div>
                                    <img src="data:image/jpg;base64, @cartItem.Theme.GetImageBase64"
                                         alt="Image not found" width="40" class="rounded shadow-sm img-thumbnail"
                                         asp-append-version="true" />
                                    <h6 class="my-0">@cartItem.Product.Name</h6>
                                    <small class="text-muted">Theme: @cartItem.Theme.Name</small>
                                    <small class="text-muted">| Quantity: @cartItem.Quantity</small>
                                </div>
                                <span class="text-muted">@cartItem.Product.Price.ToString("c")</span>
                            </li>
                        }
                        <li class="list-group-item d-flex justify-content-between">
                            <span>Total:</span>
                            <strong>
                                @Model.ShoppingCart.CartItems.Sum(ci =>
                                ci.Product.Price * ci.Quantity).ToString("c")
                        </strong>
                    </li>
                </ul>
            </div>
            <div class="col-md-7 col-lg-8">
                <h4 class="mb-3">Order Address</h4>
                <form asp-controller="Checkout" asp-action="CheckoutOrder">
                    <div class="row g-3">
                        <div class="col-sm-6">
                            <label asp-for="@Model.OrderAdress.FirstName"></label>
                            <div><span asp-validation-for="OrderAdress.FirstName" class="text-danger"></span></div>
                            <input class="form-control" asp-for="@Model.OrderAdress.FirstName">
                        </div>

                        <div class="col-sm-6">
                            <label asp-for="@Model.OrderAdress.LastName"></label>
                            <div><span asp-validation-for="OrderAdress.LastName" class="text-danger"></span></div>
                            <input class="form-control" asp-for="@Model.OrderAdress.LastName">
                        </div>

                        <div class="col-12">
                            <input type="hidden" class="form-control" asp-for="@Model.UserId">
                        </div>

                        <div class="col-12">
                            <label asp-for="@Model.OrderAdress.Email"></label>
                            <div><span asp-validation-for="OrderAdress.Email" class="text-danger"></span></div>
                            <input class="form-control" asp-for="@Model.OrderAdress.Email">
                        </div>

                        <div class="col-4">
                            <label asp-for="@Model.OrderAdress.City">City</label>
                            <div><span asp-validation-for="OrderAdress.City" class="text-danger"></span></div>
                            <input class="form-control" asp-for="@Model.OrderAdress.City">
                        </div>

                        <div class="col-8">
                            <label asp-for="@Model.OrderAdress.Adress"></label>
                            <div><span asp-validation-for="OrderAdress.Adress" class="text-danger"></span></div>
                            <input class="form-control" asp-for="@Model.OrderAdress.Adress"
                                   placeholder="Street and house number">
                        </div>

                        <div class="col-4">
                            <label asp-for="@Model.OrderAdress.Country"></label>
                            <div><span asp-validation-for="OrderAdress.Country" class="text-danger"></span></div>
                            <input class="form-control" asp-for="@Model.OrderAdress.Country">
                        </div>

                        <div class="col-4">
                            <label asp-for="@Model.OrderAdress.State"></label>
                            <div><span asp-validation-for="OrderAdress.State" class="text-danger"></span></div>
                            <input class="form-control" asp-for="@Model.OrderAdress.State">
                        </div>

                        <div class="col-4">
                            <label asp-for="@Model.OrderAdress.ZipCode"></label>
                            <div><span asp-validation-for="OrderAdress.ZipCode" class="text-danger"></span></div>
                            <input class="form-control" asp-for="@Model.OrderAdress.ZipCode">
                        </div>

                    </div>
                    <hr class="my-4">
                    <button class="w-100 btn btn-outline-secondary btn-lg" type="submit">Order</button>
                </form>
            </div>
        </div>
    }
    else
    {
        <div class="align-items-center">
            <h3 class="text-center">
                <strong>You didn't buy anything.</strong>
            </h3>
        </div>
    }
    </main>
</div>
