@model ProductViewModel
@{
    ViewData["title"] = "CRUD Page";
}
<div>
    <h3 class="bg-@Model.ThemeColor text-white text-center">@Model.ActionName</h3>
</div>
<form asp-action="@Model.ActionName" asp-controller="Form" method="post">
    <div class="form-group">
        <label asp-for="Product.ProductId"></label>
        <input class="form-control" asp-for="Product.ProductId"
               readonly/>
    </div>
    <div class="form-group">
        <label asp-for="Product.Name"></label>
        <input class="form-control" asp-for="Product.Name"
               readonly="@Model.IsReadOnly" />
    </div>
    <div class="form-group">
        <label asp-for="Product.Price"></label>
        <input class="form-control" asp-for="Product.Price"
               readonly="@Model.IsReadOnly" />
    </div>
    <div class="form-group">
        <label asp-for="Product.Category.Name">Category</label>
        <select class="form-control" asp-for="Product.CategoryId" disabled="@Model.IsReadOnly"
                asp-items="@(new SelectList(Model.Categories, "CategoryId", "Name"))">
            <option value="">Select Category</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Product.Supplier.Name">Category</label>
        <select class="form-control" asp-for="Product.SupplierId" disabled="@Model.IsReadOnly"
                asp-items="@(new SelectList(Model.Suppliers, "SupplierId", "Name"))">
            <option value="">Select Supplier</option>
        </select>
    </div>
    @if (!Model.IsReadOnly || Model.ActionName == "Delete")
    {
        <button class="btn btn-outline-@Model.ThemeColor" type="submit">@Model.ActionName</button>
    }
    <a class="btn btn-outline-dark" asp-action="Index" asp-controller="Home">Back</a> 
</form>
