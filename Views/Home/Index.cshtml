@model ProductPaging
@{
    //Layout = "_Layout";
    ViewData["Title"] = "Home Page";
}
<div>
    <h4 class="bg-dark text-white text-center p-2">Products list</h4>
</div>
<div>
    <table class="table table-sm table-bordered table-striped align-middle">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Price</th>
                <th>Category</th>
                <th>Supplier</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model.Products)
            {
                <tr>
                    <td>@p.ProductId</td>
                    <td>@p.Name</td>
                    <td>@p.Price</td>
                    <td>@p.Category.Name</td>
                    <td>@p.Supplier.Name</td>
                    <td class="text-center">
                        <a class="btn btn-outline-info" asp-action="Read" asp-controller="Form"
                           asp-route-id="@p.ProductId" role="button">Read</a>
                        <a class="btn btn-outline-secondary" asp-action="Update" asp-controller="Form"
                           asp-route-id="@p.ProductId" role="button">Update</a>
                        <a class="btn btn-outline-danger" asp-action="Delete" asp-controller="Form"
                           asp-route-id="@p.ProductId" role="button">Delete</a>
                        <a class="btn btn-outline-success" asp-action="Add" asp-controller="Cart"
                           asp-route-id="@p.ProductId" role="button">Add to cart.</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div path-value="@(ViewBag.CurrentCategoryId ?? (ViewBag.Search ?? -1))" 
         current-page="PaginationInfo.CurrentPage"
         total-pages="PaginationInfo.TotalPages" >
    </div>
    <div>
        <a class="btn btn-outline-primary" asp-action="Create"
           asp-controller="Form" role="button">Create</a>
    </div>
</div>
